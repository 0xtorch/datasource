{
  "id": "hyperliquid-funding-history-jst",
  "service": "hyperliquid",
  "formatter": {
    "time": ["datetime-jp"],
    "coin": ["string"],
    "sz": ["big-decimal"],
    "side": ["string"],
    "payment": ["big-decimal"]
  },
  "parser": {
    "parsers": [
      {
        "description": "derivative-profit | payment>0",
        "conditions": [
          {
            "value": {
              "type": "cell",
              "column": "payment"
            },
            "pattern": {
              "type": "positive"
            }
          }
        ],
        "generators": [
          {
            "type": "derivative-profit",
            "source": {
              "type": "join",
              "values": [
                { "type": "service" },
                "_funding_",
                { "type": "cell", "column": "time" }
              ]
            },
            "timestamp": {
              "type": "cell",
              "column": "time"
            },
            "comment": {
              "type": "join",
              "values": [
                "Side: ",
                { "type": "cell", "column": "side" },
                " / Size: ",
                { "type": "cell", "column": "sz" },
                { "type": "cell", "column": "coin" }
              ]
            },
            "transfers": [
              {
                "direction": "in",
                "amount": {
                  "type": "text",
                  "value": {
                    "type": "cell",
                    "column": "payment"
                  }
                },
                "asset": {
                  "type": "symbol",
                  "value": "USDC"
                }
              }
            ]
          }
        ]
      },
      {
        "description": "derivative-fee | payment<0",
        "conditions": [
          {
            "value": {
              "type": "cell",
              "column": "payment"
            },
            "pattern": {
              "type": "negative"
            }
          }
        ],
        "generators": [
          {
            "type": "derivative-fee",
            "source": {
              "type": "join",
              "values": [
                { "type": "service" },
                "_funding_",
                { "type": "cell", "column": "time" }
              ]
            },
            "timestamp": {
              "type": "cell",
              "column": "time"
            },
            "comment": {
              "type": "join",
              "values": [
                "Side: ",
                { "type": "cell", "column": "side" },
                " / Size: ",
                { "type": "cell", "column": "sz" },
                { "type": "cell", "column": "coin" }
              ]
            },
            "transfers": [
              {
                "direction": "out",
                "amount": {
                  "type": "text",
                  "value": {
                    "type": "cell",
                    "column": "payment"
                  }
                },
                "asset": {
                  "type": "symbol",
                  "value": "USDC"
                }
              }
            ]
          }
        ]
      },
      {
        "description": "ignore | payment=0",
        "conditions": [
          {
            "value": {
              "type": "cell",
              "column": "payment"
            },
            "pattern": "\"0\""
          }
        ],
        "generators": [
          {
            "type": "ignore",
            "source": {
              "type": "join",
              "values": [
                { "type": "service" },
                "_funding_",
                { "type": "cell", "column": "time" }
              ]
            },
            "timestamp": {
              "type": "cell",
              "column": "time"
            },
            "comment": {
              "type": "join",
              "values": [
                "Side: ",
                { "type": "cell", "column": "side" },
                " / Size: ",
                { "type": "cell", "column": "sz" },
                { "type": "cell", "column": "coin" }
              ]
            },
            "transfers": []
          }
        ]
      }
    ]
  }
}
